{
  "expo": {
    "name": "luminari",
    "slug": "luminari",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "luminari",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.taariqelliott.luminari"
    },
    "android": {
      "edgeToEdgeEnabled": true,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.taariqelliott.luminari"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      "expo-web-browser",
      "react-native-bottom-tabs",
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow the app to access your photos so you can choose a profile picture.",
          "cameraPermission": "Allow the app to use your camera to take a profile picture.",
          "microphonePermission": "Allow the app to use your microphone when recording videos."
        }
      ],
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static",
            "newArchEnabled": true
          },
          "android": {
            "newArchEnabled": true
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "turboModules": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "a6ba4dc2-3aab-448e-a23f-3dc0396b7f2a"
      }
    }
  }
}